<UserControl x:Class="L046_Labb3_Code_Along.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:local="clr-namespace:L046_Labb3_Code_Along.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Menu>
        <MenuItem Header="_File" >
            <MenuItem Header="_New Question Pack" Icon="{fa:Icon File}"/>
            <Separator />
            <MenuItem Header="E_xit" Icon="{fa:Icon DoorOpen}" />
        </MenuItem>
        <MenuItem Header="_Edit">
            <MenuItem Header="Add Question" />
            <MenuItem Header="Remove Question" InputGestureText="Ctrl+R" />
            <MenuItem Header="Set PackName" Command="{Binding PlayerViewModel.SetPackNameCommand}" />
        </MenuItem>
    </Menu>
</UserControl>
