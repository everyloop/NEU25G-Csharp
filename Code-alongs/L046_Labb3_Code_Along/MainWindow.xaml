<Window x:Class="L046_Labb3_Code_Along.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:L046_Labb3_Code_Along"
        mc:Ignorable="d"
        d:Height="800" d:Width="400"
        Title="MainWindow" Height="450" Width="800" FontSize="24">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBox Margin="10 10 10 0" Text="{Binding Name}" />
            <Button Margin="10 10 10 0" Content="Update name!" Click="Button_Click" />
        </StackPanel>

        <ListBox Margin="10" Grid.Row="1" ItemsSource="{Binding Questions}" DisplayMemberPath="Query"/>
    </Grid>
</Window>
