<Window x:Class="L047_Dialogs_and_Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:L047_Dialogs_and_Windows"
        mc:Ignorable="d"
        d:Height="800" d:Width="400" FontSize="24"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="Background" Value="Beige" />
                <Setter Property="BorderThickness" Value="5" />
                <Setter Property="BorderBrush" Value="Green" />
            </Style>
        </Grid.Resources>
                
        <Grid.RowDefinitions>
            <RowDefinition Height="340" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
                
        <StackPanel Orientation="Vertical">
            <Button 
                Content="Show MessageBox"
                Margin="10 10 10 0"
                Click="ShowMessageButton_Click"
                Background="ForestGreen"
            />
            <Button 
                x:Name="AddCharacterButton"
                Content="Add character?"
                Margin="10 10 10 0"
                Click="AddCharacterButton_Click"
            />
            <Button 
                x:Name="DisableButton"
                Content="Disable!"
                Margin="10 10 10 0"
                Click="DisableButton_Click"
            />
            <Button 
                x:Name="OpenFileDialogButton"
                Content="Open file."
                Margin="10 10 10 0"
                Click="OpenFileDialogButton_Click"
            />
            <Button 
                x:Name="SaveFileDialogButton"
                Content="Save file."
                Margin="10 10 10 0"
                Click="SaveFileDialogButton_Click"
            />
            <Button 
                x:Name="AddUserDialogButton"
                Content="Add new user"
                Margin="10 10 10 0"
                Click="AddUserDialogButton_Click"
            />

        </StackPanel>

        <ListBox Grid.Row="1" Margin="10" ItemsSource="{Binding Users}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding FirstName}" />
                        <TextBlock Text="{Binding LastName}" Margin="20 0" />
                        <Button Content="Edit user" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
