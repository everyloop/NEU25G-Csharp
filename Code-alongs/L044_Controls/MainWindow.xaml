<Window x:Class="L044_Controls.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:L044_Controls"
        mc:Ignorable="d"
        d:Height="400" d:Width="400" d:FontSize="20"
        Title="MainWindow" Height="450" Width="800" FontSize="20">
    <Grid>
        <WrapPanel
            Orientation="Vertical"            
        >

            <Label
                x:Name="label"
                Content="Example label"
                Margin="10 10 0 0"
            />

                <!--TextChanged="textBox_TextChanged"-->
            <TextBox
                x:Name="textBox"
                Text="Fredrik"
                Margin="10 0 0 0"
                KeyDown="textBox_KeyDown"
            />

            <TextBox 
                AcceptsReturn="True"
                TextWrapping="NoWrap"
                Width="200"
                VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Visible"
                Margin="10 10 0 0" 
                Height="100"
                IsEnabled="False"
             />

            <Button
                x:Name="button"
                Content="Click here!"
                Margin="10 10 0 0"
                IsEnabled="False"
                Visibility="Visible"
            />
        </WrapPanel>
    </Grid>
</Window>
